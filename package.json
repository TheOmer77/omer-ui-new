{
  "name": "omer-ui",
  "version": "1.0.0",
  "description": "",
  "author": "TheOmer77",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:components": "npm -s -w packages/components run build:watch",
    "dev:styles": "npm -s -w packages/styles run build:watch",
    "dev:docs": "npm -s -w docs run dev",
    "build": "npm -s run build:components && npm -s run build:styles && npm -s run build:docs",
    "build:components": "npm -s -w packages/components run build",
    "build:styles": "npm -s -w packages/styles run build",
    "build:docs": "npm -s -w docs run build",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.11",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "concurrently": "^8.2.2",
    "cssnano": "^7.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-hover-media-feature": "^1.0.2",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.5.11",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447"
}
